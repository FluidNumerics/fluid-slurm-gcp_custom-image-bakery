{
  "variables": {
    "project_id": "",
    "zone": "",
    "image_name":"paraview",
    "build_id": "",
    "subnet": "default",
    "base": "centos",
    "fluid_version": "v2-5-0"
  },
  "builders": [{
    "type": "googlecompute",
    "project_id": "{{user `project_id`}}",
    "source_image": "fluid-slurm-gcp-compute-{{user `base`}}-{{user `fluid_version`}}",
    "source_image_project_id": "fluid-cluster-ops",
    "machine_type": "n1-standard-16",
    "disk_size": 30,
    "zone": "{{user `zone`}}",
    "subnetwork" :"{{user `subnet`}}",
    "image_family": "fluid-{{user `image_name`}}",
    "image_name": "fluid-{{user `image_name`}}-{{timestamp}}",
    "instance_name":"{{user `image_name`}}-image-node-{{timestamp}}",
    "tags":["cloudbuild"],
    "ssh_username": "packer"
  }],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E /bin/bash '{{ .Path }}'",
      "script": "./startup-script.sh"
    }
  ]
}

